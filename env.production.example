###### Basic app settings
NODE_ENV=production
LISTEN_HOST=0.0.0.0
LISTEN_PORT=8080
API_BASE_PATH=api
LOG_LEVEL=warn
# Force application timezone (affects pretty logs and date handling)
TZ=UTC

###### Scraper settings
# Default scraper mode: 'extractor' for static content, 'playwright' for dynamic content
DEFAULT_MODE=extractor

# Default timeout for individual scraping tasks in seconds
DEFAULT_TASK_TIMEOUT_SECS=60

# Default user agent string ('auto' to automatically select appropriate user agent)
DEFAULT_USER_AGENT=auto

# Default locale for content extraction (affects language detection and formatting)
DEFAULT_LOCALE=en-US

# Default timezone ID for date parsing and formatting
# Examples: Europe/Moscow (UTC+3), Europe/London (UTC+0/UTC+1), America/New_York (UTC-5/UTC-4), Europe/Berlin (UTC+1/UTC+2), America/Argentina/Buenos_Aires (UTC-3)
DEFAULT_TIMEZONE_ID=UTC

# Default locale for date parsing specifically (used for recognizing date formats)
# DEFAULT_DATE_LOCALE=en

###### Playwright settings
# Run Playwright in headless mode (true = no browser UI, false = show browser)
PLAYWRIGHT_HEADLESS=true

# Navigation timeout in seconds for Playwright browser operations
PLAYWRIGHT_NAVIGATION_TIMEOUT_SECS=30

# Block common tracking scripts and analytics for faster page loading
DEFAULT_PLAYWRIGHT_BLOCK_TRACKERS=true

# Block heavy resources like images, videos, and fonts for faster scraping
DEFAULT_PLAYWRIGHT_BLOCK_HEAVY_RESOURCES=true

###### Fingerprint settings
# Enable browser fingerprint generation to avoid detection
DEFAULT_FINGERPRINT_GENERATE=true

# Rotate fingerprints when anti-bot protection is detected
DEFAULT_FINGERPRINT_ROTATE_ON_ANTI_BOT=true

###### Batch processing settings
# Minimum delay between requests in milliseconds (to avoid rate limiting)
DEFAULT_BATCH_MIN_DELAY_MS=1500

# Maximum delay between requests in milliseconds (randomized within range)
DEFAULT_BATCH_MAX_DELAY_MS=4000

# Number of concurrent requests to process simultaneously
DEFAULT_BATCH_CONCURRENCY=1

# Time in minutes to retain batch job data in memory before cleanup
BATCH_DATA_LIFETIME_MINS=60

###### Webhook settings
# Timeout in milliseconds for webhook HTTP requests
WEBHOOK_TIMEOUT_MS=10000

# Default backoff delay in milliseconds between webhook retry attempts (can be overridden per request)
DEFAULT_WEBHOOK_BACKOFF_MS=1000

# Default maximum number of retry attempts for failed webhook deliveries (can be overridden per request)
DEFAULT_WEBHOOK_MAX_ATTEMPTS=3