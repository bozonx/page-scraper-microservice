###### Basic app settings
NODE_ENV=development
LISTEN_HOST=localhost
LISTEN_PORT=8080
# Optional: Base path for the application. If set, API available at {BASE_PATH}/api/v1
# BASE_PATH=app
LOG_LEVEL=debug
# Force application timezone (affects pretty logs and date handling)
TZ=UTC

###### Global concurrency limit
# Maximum number of heavy scrape tasks processed concurrently across the whole service
MAX_CONCURRENCY=3

# Maximum number of queued heavy tasks waiting for execution
# 0 disables queueing (only immediate execution is allowed)
MAX_QUEUE=100

# Maximum number of Playwright browser tasks processed concurrently across the whole service
# Use this to prevent OOM (browser contexts/pages are memory-heavy)
MAX_BROWSER_CONCURRENCY=1

# Maximum number of queued Playwright tasks waiting for execution
# 0 disables queueing (only immediate execution is allowed)
MAX_BROWSER_QUEUE=50

###### Scraper settings
# Default scraper mode: 'extractor' for static content, 'playwright' for dynamic content
DEFAULT_MODE=extractor

# Default timeout for individual scraping tasks in seconds
DEFAULT_TASK_TIMEOUT_SECS=60

###### Fingerprint settings
# Default user agent string ('auto' to automatically select appropriate user agent)
DEFAULT_FINGERPRINT_USER_AGENT=auto

# Default locale for browser fingerprint generation (e.g. "en-US", "ru-RU")
DEFAULT_FINGERPRINT_LOCALE=en-US

# Default timezone ID for browser fingerprint (e.g. "UTC", "Europe/Moscow")
# Examples: Europe/Moscow (UTC+3), Europe/London (UTC+0/UTC+1), America/New_York (UTC-5/UTC-4), Europe/Berlin (UTC+1/UTC+2), America/Argentina/Buenos_Aires (UTC-3)
DEFAULT_FINGERPRINT_TIMEZONE_ID=UTC

# Enable browser fingerprint generation to avoid detection
DEFAULT_FINGERPRINT_GENERATE=true

# Rotate fingerprints when anti-bot protection is detected
DEFAULT_FINGERPRINT_ROTATE_ON_ANTI_BOT=true

###### Playwright settings
# Run Playwright in headless mode (true = no browser UI, false = show browser)
PLAYWRIGHT_HEADLESS=true

# Navigation timeout in seconds for Playwright browser operations
PLAYWRIGHT_NAVIGATION_TIMEOUT_SECS=30

# Block common tracking scripts and analytics for faster page loading
DEFAULT_PLAYWRIGHT_BLOCK_TRACKERS=true

# Block heavy resources like images, videos, and fonts for faster scraping
DEFAULT_PLAYWRIGHT_BLOCK_HEAVY_RESOURCES=true

# Extra Chromium args for Playwright. Format: JSON array (recommended) or space-separated string.
PLAYWRIGHT_EXTRA_ARGS=[]

###### Fetch (/fetch) settings
# Maximum number of attempts for /fetch retries
FETCH_RETRY_MAX_ATTEMPTS=3

# Maximum number of redirects for /fetch engine=http
FETCH_MAX_REDIRECTS=7

# Maximum response size in bytes for /fetch engine=http
FETCH_MAX_RESPONSE_BYTES=10485760

###### File proxy (/file) settings
# Maximum number of redirects for /file
FILE_MAX_REDIRECTS=7

# Maximum response size in bytes for /file
FILE_MAX_RESPONSE_BYTES=26214400